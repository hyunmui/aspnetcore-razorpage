@page
@model aspnetcoreapp.Pages.Movies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <div class="form-group row">
        <label class="col-2 text-right" asp-for="SearchString">Title</label>
        <div class="col-4">
            <input type="text" class="form-control" asp-for="SearchString" placeholder="Enter searching text..." />
        </div>
        <div class="col-3">
            <select class="form-control" asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-3">
            <input type="submit" class="btn btn-block btn-primary" value="Search" />
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Price)
            </th>
            <th>
                Commands
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movie) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-secondary" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
